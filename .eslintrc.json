{
     "root": true,
     "parserOptions": {
          "ecmaVersion": 12,
          "sourceType": "module"
     },
     "extends": [
          "eslint:recommended",
          "prettier"
     ],
     "env": {
          "es2021": true,
          "node": true
     },
     "rules": {
          "no-console": [
               "error",
               {
                    "allow": [
                         "warn",
                         "log",
                         "error"
                    ]
               }
          ],
          "no-promise-executor-return": "off",
          "no-unused-vars": "off",
          "no-async-promise-executor": "off"
     }
}